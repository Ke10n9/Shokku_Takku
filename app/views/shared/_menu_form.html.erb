<%= form_with(model: @menu, local: true) do |f| %>
  <%= fields_for @dish do |i| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'shared/error_messages', object: i.object %>

    <%= f.date_field :date, value: @menu_date %>

    <%= f.select :time, @menu_times, prompt: "（朝昼夕）" %>

    <div class="col-xs-4">
      <%= i.select :category, @dish_categories, prompt: "（分類）",
                                                    selected: @dish_category %>
    </div>

    <div class="col-xs-8">
      <%= i.text_field :name, placeholder: "品名" %>
    </div>

  <% end %>

  <%= f.submit "送信", class: "btn btn-primary" %>
<% end %>
