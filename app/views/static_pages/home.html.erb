<div class="row">
  <aside class="col-md-4 top">
    <% if logged_in? %>
      <%= render 'users/user_info' %>
      <%= render 'shared/menu_form' %>
    <% else %>
      <div class="center jumbotron">
        <h1>日々の献立を管理しよう！</h1>
        <h2>-献立記録サービス-</h2>
        <%= link_to "ユーザー登録", signup_path, class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </aside>
  <div class="col-md-8">
    <ul class="menus">
      <%= render @menus %>
    </ul>
    <%= will_paginate @menus %>
  </div>
</div>
