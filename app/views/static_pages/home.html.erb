<div class="row">
  <aside class="col-md-8 top">
    <% if logged_in? %>
      <%= render 'users/user_info' %>
      <%= render 'shared/menu_form' %>
    <% else %>
      <div class="center jumbotron">
        <h1>日々の献立を管理しよう！</h1>
        <h2>-献立記録サービス-</h2>
        <%= link_to "ユーザー登録", signup_path, class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </aside>
  <ul class="col-md-8 grid-menus horizontal-list">
    <%= render @menus %>
  </ul>
</div>
