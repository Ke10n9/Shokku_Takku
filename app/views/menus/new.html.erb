<% provide(:title, "メニュー登録") %>
<h1>メニュー登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @menu, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.date_field :date, value: Time.now.strftime("%Y-%m-%d") %>

      <%= f.select :time, @menu_times, prompt: "（朝昼夕）" %>

      <% @dishes.each do |dish| %>
        <%= fields_for "dish[]", dish do |i| %>

          <div class="col-xs-4">
            <%= i.select :category, @dish_categories, selected: dish.category %>
          </div>

          <div class="col-xs-8">
            <%= i.text_field :name, placeholder: "品名" %>
          </div>

          <%= render 'shared/error_messages', object: i.object %>
        <% end %>

      <% end %>

      <%= f.submit "送信", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
