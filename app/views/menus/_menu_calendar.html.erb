<div class="calendar">
  <% for num in 0..30 do %>
    <% @menu_times.each do |time| %>
      <div class="menu" id="menu-<%= @date-num %>-<%= time[0] %>">
        <% if @menu = Menu.find_by(date: @date-num, time: time[0]) %>
          <% @menu.dishes.all.each do |dish| %>
            <li class="dish"><%= dish.name %></li>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
