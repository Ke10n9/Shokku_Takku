<% provide(:title, "メニュー編集") %>
<h1>メニュー編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @menu, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.date_field :date, value: @menu.date %>

      <%= f.select :time, @menu_times, selected: @menu.time %>

      <% @menu.dishes.each do |dish| %>
        <%= fields_for "dish[]", dish do |i| %>

          <div class="col-xs-4">
            <%= i.select :category, @dish_categories, selected: dish.category %>
          </div>

          <div class="col-xs-8">
            <%= i.text_field :name, value: dish.name %>
          </div>

          <% unless dish.name.empty? %>
            <%= render 'shared/error_messages', object: i.object %>
          <% end %>
        <% end %>

      <% end %>

      <%= f.submit "確定", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
